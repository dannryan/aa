<p id="notice"><%= notice %></p>


<h1>Listing of Clients</h1>

<table>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th colspan="3">Action</th>
      <th>Last Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.order('lastname, firstname').each do |client| %>
      <tr>
        <td><%= client.lastname %></td>
        <td><%= client.firstname %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= client.updated_at.strftime("%m/%d/%Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

