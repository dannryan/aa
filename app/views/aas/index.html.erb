<p id="notice"><%= notice %></p>

<h1>Listing of Asset Classes</h1>

<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>Segment</th>
      <th>Sub-Segment</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @aas.each do |aa| %>
      <tr>
        <td><%= aa.aclass %></td>
        <td><%= aa.segment %></td>
        <td><%= aa.sub_segment %></td>
        <td><%= link_to 'Show', aa %></td>
        <td><%= link_to 'Edit', edit_aa_path(aa) %></td>
        <td><%= link_to 'Destroy', aa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'New Asset Class', new_aa_path, method: :get %>

